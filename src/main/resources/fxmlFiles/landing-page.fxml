<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox
        fx:id="root" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LandingPage">
    <Label text="Scrabble Game" styleClass="title-label" />
    <TextField fx:id="nameField" promptText="Enter your name" />
    <Button fx:id="hostButton" text="Host" styleClass="button" onAction="#host" />
    <Button fx:id="joinButton" text="Join" styleClass="button" onAction="#join" />
</VBox>
